# --- Django core ---
DJANGO_SECRET_KEY=change_me_dev_only
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# --- Database (MySQL by default) ---
DB_ENGINE=django.db.backends.mysql
DB_NAME=cfp_db
DB_USER=root
DB_PASSWORD=changeme
DB_HOST=localhost
DB_PORT=3306

# --- CORS/CSRF ---
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# --- JWT (optional overrides) ---
SIMPLE_JWT_ACCESS_HOURS=2
SIMPLE_JWT_REFRESH_DAYS=1

# Copy this file to backend/.env and adjust the values.
# Never commit backend/.env with real secrets.

# --- DRF Pagination (optional) ---
# Default page size for list endpoints; can be overridden per request with ?page_size=
DRF_PAGE_SIZE=25
DRF_MAX_PAGE_SIZE=200

# --- Cache (optional) ---
# Default is local memory cache (per-process). For production, set to Memcached/Redis backend.
# CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
# CACHE_LOCATION=cfp-locmem
ANALYTICS_CACHE_SECONDS=300
